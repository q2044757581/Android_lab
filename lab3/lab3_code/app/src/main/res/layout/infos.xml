<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Top"
        android:layout_weight="1"
        android:background="#8A000000">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/Back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"/>

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/star"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/empty_star" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:src="@drawable/maltesers"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/Name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#D5000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="#D5000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price"
                android:layout_below="@+id/price"
                android:layout_marginTop="8dp"
                android:textColor="#8A000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/info1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/info1"
                android:textColor="#8A000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/price"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shoplist" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/logo"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/logo"
                android:background="@color/line" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignLeft="@+id/info1"
                android:layout_below="@+id/info1"
                android:layout_marginTop="10dp"
                android:background="@color/line" />


        </RelativeLayout>

        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:gravity="center_vertical"
            android:textColor="#D5000000"
            android:text="  更多产品信息"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/more"
            android:background="@color/line" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
    </LinearLayout>